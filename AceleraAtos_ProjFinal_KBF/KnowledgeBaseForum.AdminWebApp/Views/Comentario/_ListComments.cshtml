@model IEnumerable<ComentarioViewModel>

@if (Model.Count() == 0)
{
    <span>Não há comentários para o tópico.</span>
}
else
{
    <table class="table table-hover table-sm">
        <thead>
            <tr>
                <th>Autor</th>
                <th>Comentário</th>
                <th>Data</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (ComentarioViewModel comment in Model)
            {
                <tr>
                    <td>@(comment.Usuario.Nome)</td>
                    <td>@(comment.Conteudo)</td>
                    <td>@(comment.DataCriacao)</td>
                    <td>
                        @if (comment.Status)
                        {
                            <button class="btn btn-danger btn-sm" role="button" onclick="toggleComment('@(comment.Id)')">Desativar</button>
                        }
                        else
                        {
                            <button class="btn btn-success btn-sm" role="button" onclick="toggleComment('@(comment.Id)')">Ativar</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}