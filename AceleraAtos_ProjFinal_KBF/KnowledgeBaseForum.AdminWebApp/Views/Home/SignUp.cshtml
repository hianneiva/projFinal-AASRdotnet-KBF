@{
    ViewData["Title"] = "Cadastrar";
    string? errorMsg = (string?)ViewData["Error"];
}
<h3>@ViewData["Title"]</h3>

@if(!string.IsNullOrEmpty(errorMsg))
{
    <div class="row">
        <br />
        <div class="col-sm-12 alert alert-danger">
            @(errorMsg)
        </div>
    </div>
    <hr />
}
<div class="row">
    <div class="col-sm-4"> <!-- Empty --> </div>
    <div class="col-sm-4">
        <form asp-action="SignUp">
            <div class="form-group">
                <label for="login" class="control-label">Login</label>
                <input name="login" id="login" class="form-control" type="text" />
            </div>
            <div class="form-group">
                <label for="password" class="control-label">Senha</label>
                <input name="password" id="password" class="form-control" type="password" />
            </div>
            <div class="form-group">
                <label for="passwordConfirm" class="control-label">Confirme a Senha</label>
                <input name="passwordConfirm" id="passwordConfirm" class="form-control" type="password" />
            </div>
            <div class="form-group">
                <label for="name" class="control-label">Nome</label>
                <input name="name" id="name" class="form-control" type="text" />
            </div>
            <div class="form-group">
                <label for="email" class="control-label">E-mail</label>
                <input name="email" id="email" class="form-control" type="email" />
            </div>
            <br />
            <input type="submit" class="btn btn-primary mr-3" value="Cadastrar" />
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
    <div class="col-sm-4"> <!-- Empty --> </div>
</div>
